@using Financial.Content
@using Financial.Internationalization

<li>
    @if (WebSecurity.IsAuthenticated)
    {
        <a href="#">
            <span class="@Icons.User ico-padding" aria-hidden="true"></span>@(WebSecurity.CurrentUserName)
        </a>
    }
    else
    {
        <a href="@Url.RouteUrl("SignUp")" title="@Labels.SignUp">
            <span class="@Icons.Users ico-padding" aria-hidden="true"></span>@Labels.SignUp
        </a>
    }
</li>