@model Financial.Models.Entities.CreditCardNetwork

@using Financial.Internationalization
@using Financial.Internationalization.Entities.CreditCardNetwork

@{
    ViewBag.Title = CCNetworkEntityLabels.This_Edit_Title;
}

@using (Html.BeginRouteForm("EditCreditCardNetworkPost", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(n=>n.Id)
        <legend><span class="fa fa-credit-card-alt text-primary ico-padding"></span>@CCNetworkEntityLabels.This_Edit_Title</legend>
        <div class="form-group">

            @Html.LabelFor(n => n.DisplayName, new { @class = "col-lg-1 control-label" })
            <div class="col-lg-5">
                @Html.TextBoxFor(n => n.DisplayName, new { @class = "form-control", placeholder = @CCNetworkEntityLabels.DisplayName_Placeholder, autofocus = "" })
                @Html.ValidationMessageFor(n => n.DisplayName)
            </div>

            @Html.LabelFor(n => n.ImageName, new { @class = "col-lg-1 control-label" })
            <div class="col-lg-5">
                @Html.DropDownListFor(n => n.ImageName, new SelectList(ViewBag.ImageList), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-11 col-lg-offset-1">
                <button type="submit" class="btn btn-primary"><span class="fa fa-floppy-o ico-padding" aria-hidden="true"></span>@Labels.SaveChanges</button>
            </div>
        </div>
    </fieldset>
}

@section Scripts{
    @Html.Partial("_ValidateScripts")
}